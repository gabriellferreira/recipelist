<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    tools:ignore="UseCompoundDrawables">

    <ImageView
        android:id="@+id/item_recipe_image"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:contentDescription="@string/accessibility_item_recipe_image"
        android:transitionName="transition_recipe_image"
        tools:background="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/item_recipe_title"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_recipe_image"
        android:layout_marginTop="8dp"
        tools:text="title" />

    <TextView
        android:id="@+id/item_recipe_calories"
        style="@style/TextAppearance.AppCompat.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/item_recipe_image"
        android:layout_margin="8dp"
        android:background="@drawable/background_rectangle_8dp_white"
        android:padding="8dp"
        tools:text="352 kcal" />

</RelativeLayout>